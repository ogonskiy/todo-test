{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "types": ["webpack-env"],
    "paths": {
      "~/*": [
        "./"
      ],
      "@/*": [
        "src/*"
      ],
      "shared-parts": [
        "./shared-parts/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./global.d.ts",
    "shared-parts/**/*"
  ],
  "exclude": ["node_modules"]
}
